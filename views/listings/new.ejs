<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>creat new listings</h3>
    <br><br><br>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name ="listing[title]" placeholder="enter name" type="text" class="form-control" required>
        <div class="valid-feedback"> title is correct</div>
        </div>
        <br><br>
        <div class="mb-3" >
            <label for="description" class="form-label">description</label>
            <input name="listing[description]" placeholder="enter description" type="text" class="form-control" required>
             <div class="invalid-feedback"> enter short description name</div>
       </div>
        <br><br>
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="listing[image]" placeholder="enter image url/link" type="text" class="form-control" >
        </div>
        <br><br>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">price</label>
            <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
            <div class="invalid-feedback"> price should in indian currency</div>
        </div>  
        <br><br>
        <div class="mb-3 col-md-7">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
            <div class="invalid-feedback"> enter country name</div>
        </div>  
        </div>  
        </div>
        <br><br>
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" placeholder="enter location" type="text"class="form-control" required>
             <div class="invalid-feedback"> enter location name</div>
        </div>  
        <br><br>
        <button class="btn btn-dark add-btn mt-3">ADD NEW FORM</button>
<br><br><br>
    </form>
</body>
</div>
</div>
